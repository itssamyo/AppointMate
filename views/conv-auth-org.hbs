<div class="container"><br><br>
    <div class="row" style=" height: auto; overflow: scroll; box-shadow: 0px 0px 15px -2px;border-radius:7px;">
        <div class="col">
            <br><h5>AUTHORIZATION FORM</h5><br>
            <form action="/users/conv/auth-org/{{ convid }}/{{ orgid }}" method="post" enctype="multipart/form-data">
                <div class="form-group">            
                    <input type="text" class="form-control" name="eventname" placeholder="Event name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="location" placeholder="Location" required>
                </div>
                <div class="form-group">
                    <textarea rows="3" cols="50" name="description" type="text-area" class="form-control" name="desc" placeholder="Description" required></textarea>
                </div>
                <div class="form-group" style="width:300px">
                    <input type="date" name="eventdate" class="form-control" required>
                </div>   
                <div class="form-group">
                    <label for="attendees">Attendee list:</label>
                    <input type="file" name="filetoupload" class="form-control" required>
                </div><br><br>                    
                <button type="submit" class="btn btn-primary" style="float:right">Submit</button><br><br>
        </form>
        </div>
    </div>
</div>