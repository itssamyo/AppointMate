<div class="container"><br>
    <h4>CONVENER DASHBOARD</h4><br>
    <a href="/users/conv/new-meeting" style="float:right"><button class="btn btn-primary">create meeting</button></a>
    <br>
    <h6>SCHEDULED MEETINGS</h6>
    <div class="row" style=" height: 300px; overflow: scroll; box-shadow: 0px 0px 15px -2px;border-radius:7px;">        
         <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {{# each meeting as |res|}}
            {{# each res as |meet|}}
            <tr>
                <td>{{ meet.mName }}</td>
                <td>{{ meet.mDesc }}</td>
                <td>{{ meet.location }}</td>
                <td>{{ meet.mDate }}</td> 
                <td><a href="/users/conv/slot-status/{{ meet.mId }}" class="btn btn-success btn-sm">view</a></td>            
            </tr>
            {{/each}}
            {{/each}}
            </tbody>
        </table>
    </div>
    <br><br>
    <h6>AVAILABLE ORGANIZERS</h6>
    <div class="row" style=" height: 300px; overflow: scroll; box-shadow: 0px 0px 15px -2px;border-radius:7px;">
         <table class="table table-hover">
            <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
            </thead>
            <tbody>
            {{# each organiser as |org|}}
            <tr>
                <td>{{org.email}}</td>
                <td>{{org.uFname}}</td>
                <td>{{org.uLname}}</td>
                <td><a href="/users/conv/auth-org/{{ org.uId }}" class="btn btn-success btn-sm">Select</a></td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
